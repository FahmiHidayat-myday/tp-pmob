<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ikon Status (Mirip seperti logo di item_lowongan) -->
        <ImageView
            android:id="@+id/imgStatusIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            tools:src="@drawable/baseline_check_circle_24"
            app:tint="@color/status_diterima"
            android:contentDescription="Ikon Status"
            android:scaleType="centerInside"/>

        <!-- Detail Notifikasi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Lamaran untuk UI/UX Designer"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0D1A33"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="DITERIMA"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:textColor="@color/status_diterima"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="di Tokopedia - 2 hari yang lalu"
                android:textSize="12sp"
                android:textColor="#777777"/>

        </LinearLayout>

        <!-- Ikon Panah (Opsional, jika notifikasi bisa diklik untuk detail) -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:tint="#CCCCCC"
            android:contentDescription="Lihat Detail"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
