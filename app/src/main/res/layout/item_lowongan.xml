<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- ================= KODE LENGKAP ================= -->

        <!-- Logo Perusahaan -->
        <ImageView
            android:id="@+id/imgCompanyLogo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            tools:src="@drawable/logo_job"
            android:contentDescription="Logo Perusahaan"
            android:scaleType="centerCrop"/>

        <!-- Detail Lowongan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Judul Pekerjaan -->
            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="UI/UX Designer"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D1A33"/>

            <!-- Nama Perusahaan -->
            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nama Perusahaan"
                android:textSize="14sp"
                android:textColor="#777777"/>

            <!-- Lokasi Pekerjaan -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Surabaya, Indonesia"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#FF7C00"/>

        </LinearLayout>

        <!-- Ikon Panah untuk navigasi -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:tint="#CCCCCC"
            android:contentDescription="Lihat Detail"/>

        <!-- ================= AKHIR KODE LENGKAP ================= -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
